<?xml version="1.0" encoding="utf-8"?>
<!-- 顶部带圆角 白色背景 灰色边框 无下边框 长方体 -->
<layer-list xmlns:android="http://schemas.android.com/apk/res/android" >

    <item>
        <shape>
            <solid android:color="#FEFFFE" />

            <corners
                android:radius="30dp" />
            <size 
                android:width="30dp"
                android:height="30dp"/>

            <stroke
                android:color="@color/light_gray"
                android:width="0.5dp"/>

        </shape>
    </item>

</layer-list>